<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @order.shopping_cart.shopping_cart_items.first.art_item.art.img_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>Order</strong> <%= @order.id %></li>
        <li><strong>TOTAL</strong> <%= @order.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>