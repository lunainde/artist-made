<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to image_tag('am-logo.png', width: 70), root_path, class: "navbar-logo mr-4" %>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>

<div class="search-container">
  <div id="btn-padding">
    <%= link_to "ARTWORK", arts_path, class: "btn btn-flat" %>
    <%= link_to "GIFT SHOP", art_items_path, class: "btn btn-flat" %>
  </div>
</div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to all_favorites_path, class: "nav-link" do %>
            <i class="fas fa-heart"></i>
            <% end %>
        </li>
        <li class="nav-item">
            <%= link_to shopping_cart_path(current_user.shopping_carts.find_by(paid: false)), class: "nav-link" do %>
              <i class="fas fa-shopping-bag"></i>
            <% end %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/lunainde", class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Favorites", all_favorites_path, class: "dropdown-item" %>
            <%= link_to "Collection Cart", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link" do %>
           <i class="fas fa-user"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
