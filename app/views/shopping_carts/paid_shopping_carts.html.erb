                <p>You have ordered: </p>
                <strong><% paid_shopping_cart.shopping_cart_items.each do |item| %>
                <p> <%= item.art_item.art.title %> - <%= item.art_item.format %> </p>
                <% end %>
                </strong> for <strong><%= paid_shopping_cart.total %> â‚¬</strong></p>
                </div>
                <h3>Thank you for your purchase! </h3>
              </div> 
              <div class="col-md-3">
                <%= image_tag paid_shopping_cart.shopping_cart_items.first.art_item.art.img_url, width: '100%' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
</div>