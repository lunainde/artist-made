
<div class="menu-bar">
  <h4>Select <strong>the perfect Gift</strong></h4>
  <ul class="list-inline tabs-underlined">
    <li><%= link_to "art", arts_path, class: "tab-underlined" %></li>
    <li><%= link_to "artist", artists_path, class: "tab-underlined" %></li>
    <li><%= link_to "theme", root_path, class: "tab-underlined" %></li>
    <li><%= link_to "form", root_path, class: "tab-underlined" %></li>
    <li><%= link_to "price", root_path, class: "tab-underlined" %></li>
  </ul>
</div>

<div class="container">
  <div class="row">

    <div class="col-4">
        <div class="card-head p-3">
          <div class="product-detail">
            <br>
             <h5>Personalize your gifts</h5> Support emerging artists with every single order
          </div>
          <span class="back-text ml-2">artist-made</span>
          <div class="art-info"><h3><%= @art_item.art.title %></h3>
            <p>by <%= @art_item.art.artist.first_name %> <%= @art_item.art.artist.last_name %></p>
          </div>
        </div>

        <div class="card-body p-4">
          <div class="product-desc">
            <span class="product-title"><h5><%= @art_item.format %></h5></span>
            <span class="product-caption">What people think</span>
            <span class="product-rating">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star grey"></i>
            </span>
          </div>

         <div class="p-3">
            <p id="hidden">Quantity: <%= @art_item.quantity %></p>
            <span><p><i class="fas fa-euro-sign"></i></span> <span><%= @art_item.price %></p></span>
            <% if @existing_shopping_cart_item %>
              <%= simple_form_for [@art_item, @existing_shopping_cart_item] do |f| %>
                <%= f.input :quantity, input_html: { min: "1", value: 1 } %>
                <%= f.submit "+", :class => "btn btn-flat" %>
              <% end %>
            <% else %>
              <%= simple_form_for [@art_item, @shopping_cart_item] do |f| %>
                <%= f.input :quantity, input_html: { min: "1", value: 1 } %>
                <%= f.submit "+", :class => "btn btn-flat" %>
              <% end %>
            <% end %>
          </div>

        <div>
          <nav class="dropdownmenu">
            <ul>
              <li><a href="#">TEXTILE ▾</a>
                <ul id="submenu">
                  <li><a href="#">T-shirt (w)</a></li>
                  <li><a href="#">T-shirt (m)</a></li>
                  <li><a href="#">Hoddies</a></li>
                  <li><a href="#">Tote Bags</a></li>
                </ul>
              </li>
            </ul>
          </nav>
        </div>

        <div class="product-size">
            <h4>Size</h4>
          <ul class="ul-size">
            <li><a href="#">XS</a></li>
            <li><a href="#">S</a></li>
            <li><a href="#">M</a></li>
            <li><a href="#" class="active">L</a></li>
            <li><a href="#">XL</a></li>
          </ul>
        </div>

        <div class="product-color">
            <h4>Colour</h4>
          <ul class="ul-color">
            <li><a href="#" class="black active"></a></li>
            <li><a href="#" class="grey"></a></li>
            <li><a href="#" class="white"></a></li>
            <li><a href="#" class="red"></a></li>
            <li><a href="#" class="green"></a></li>
            <li><a href="#" class="blue"></a></li>
          </ul>
        </div>

        <div class="prints">
            <nav class="dropdownmenu">
              <ul>
                <li><a href="#">PRINTS ▾</a>
                  <ul id="submenu">
                    <li><a href="#">Small Prints</a></li>
                    <li><a href="#">Postcards</a></li>
                    <li><a href="#">Posters</a></li>
                  </ul>
                </li>
              </ul>
            </nav>
        </div>

        <div class="devices">
            <nav class="dropdownmenu">
              <ul>
                <li><a href="#">CELLPHONE CASES ▾</a>
                  <ul id="submenu">
                    <li><a href="#">iPhone X</a></li>
                    <li><a href="#">iPhone 12</a></li>
                    <li><a href="#">iPhone 11</a></li>
                  </ul>
                </li>
              </ul>
            </nav>

            <nav class="dropdownmenu">
              <ul>
                <li><a href="#">LAPTOP CASES ▾</a>
                  <ul id="submenu">
                    <li><a href="#">MacBook Air</a></li>
                    <li><a href="#">MacBook Pro 13"</a></li>
                    <li><a href="#">MacBook Pro 15"</a></li>
                  </ul>
                </li>
              </ul>
            </nav>

             <nav class="dropdownmenu">
              <ul>
                <li><a href="#">TABLET CASES ▾</a>
                  <ul id="submenu">
                    <li><a href="#">iPad </a></li>
                    <li><a href="#">iPad Pro</a></li>
                    <li><a href="#">iPad Air</a></li>
                  </ul>
                </li>
              </ul>
            </nav>
        </div>

        <div class="add-to-card">
          <button class="btn-flat w-100"><h4>Add to Collection</h4></button>
        </div>

      </div>
    </div>

    <div class="col-8">
      <div class="card-category-ipad" id="main-art-picture" style="background-image: url(https://images.unsplash.com/photo-1589739900266-43b2843f4c12?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1278&q=80)">
        <img src="<%= image_path @art_item.art.img_url  %>" />
      </div>
    </div>

  </div>
</div>
</div>
