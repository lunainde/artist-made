<div class="container">
  <div class="menu-bar">
    <h5>Meet the <strong>am-Creators</strong></h5>
    <%= render "shared/search_form" %>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="container">
        <div class="column">
          <div class="cards">
             <% @artists.each do |artist| %>
             <%= link_to artist_path(artist) do %>
               <div class="image">
                <%= image_tag artist.url_artists_photo unless artist.url_artists_photo.nil? %>

                <h5><%= artist.last_name %></h5>
                <p><%= artist.art_type %></p>
               </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

