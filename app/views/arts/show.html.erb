<div class="container">
  <div class="row">

    <div class="col-8 mt-3">

      <div class="card-category" id="main-art-picture" style="background-image: linear-gradient(rgba(0,0,0,0.0), rgba(0,0,0,0.0)), url(<%= image_path @art.img_url  %>)">
        <div class="card-trip-infos" id="art-card-overlay">
            <img src="<%= image_path @art.img_url  %>" id="art-card-picture-shape" class="card-trip-user .mockup-square" />
        </div>
      </div>

    </div>

    <div class="col-4 mt-3">
      <div class="item mt-3">
        <div class="card-product-info">

          <div class="item-title">
            <h2><%= @art.title %></h2>
          </div>
            <h5><%= @art.category %></h5>
            <p><%= @art.description %></p>
            <p>by <%= @art.artist.first_name %> <%= @art.artist.last_name %></p>
        </div>
      </div>

      <div class="social-media">

        <div class="social-links">
          <a href="#"><i class="fab fa-facebook-f"></i></a>
          <a href="#"><i class="fab fa-instagram"></i></a>
          <a href="#"><i class="fab fa-whatsapp"></i></a>
          <a href="#"><i class="fab fa-telegram-plane"></i></a>
          <a href="#"><i class="fab fa-twitter"></i></a>
        </div>
      </div>
    </div>

  <div class="container">
    <div class="row mb-4">
      <div class="col-2 mt-3">
        <div class="card-mockup main" style="background-image: url(<%= image_path @art.img_url %>)"></div>
      </div>
      <div class="col-2 mt-3">
        <div class="card-mockup portrait" style="background-image: url(<%= image_url("art-show-2.png") %>)"></div>
      </div>
      <div class="col-2 mt-3">
        <div class="card-mockup square" style="background-image: url(<%= image_url("art-show-3.png") %>)"></div>
      </div>
      <div class="col-2 mt-3">
        <div class="card-mockup circle" style="background-image: url(<%= image_url("art-show-4.png") %>)"></div>
      </div>
    </div>
  </div>

  </div>
</div>
