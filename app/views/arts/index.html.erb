<div class="menu-bar">
  <h4>am Artwork</h4>

  <ul class="list-inline tabs-underlined">
    <li>
      <%= link_to "art", arts_path, class: "tab-underlined active" %>
    </li>
    <li>
      <%= link_to "artist", artists_path, class: "tab-underlined" %>
    </li>

    <li>
      <%= link_to "theme", root_path, class: "tab-underlined" %>
    </li>
    <li>
      <%= link_to "form", root_path, class: "tab-underlined" %>
    </li>
    <li>
      <%= link_to "price", root_path, class: "tab-underlined" %>
    </li>
  </ul>

</div>

<div class="container-fluid">
  <div class="row">
    <div class="column">
      <div class="cards">
         <% @arts.each do |art| %>
         <div class="image">
          <%= image_tag art.img_url unless art.img_url.nil? %>

          <%= link_to root_path, class: "btn btn-fav" do %>
            <i class="far fa-heart"></i>
          <% end %>
          <%= link_to root_path, class: "btn btn-cart" do %>
            <i class="fas fa-plus"></i>
          <% end %>

          <h5><%= art.title %></h5>
          <p><%= art.description %></p>
         </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

