<div class="container-fluid">
  <div class="row">
    <div class="column">
      <div class="cards">
         <% @arts.each do |art| %>
         <div class="image">
          <%= image_tag art.img_url %>

          <%= link_to root_path, class: "btn btn-fav" do %>
            <i class="far fa-heart"></i>
          <% end %>

          <%= link_to root_path, class: "btn btn-cart" do %>
            <i class="fas fa-plus"></i>
          <% end %>

          <h5><%= art.title %></h5>
          <p><%= art.description %></p>
         </div>
        <% end %>
      </div>
  </div>
 </div>
</div>

